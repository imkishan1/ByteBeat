<div class="container">
<div class="blog-page-title">
    <div class="author">
        <h1 class="author__heading">Byte<span id="color-purple">Beat</span></h1>
        <p class="author__body">Tech Unleashed, Byte by Byte</p>
        <p class="post-description">Share Your Insights on our Dynamic Blog Platform â€“ A Space for Unfiltered Opinions and Diverse Perspectives. Join the Conversation Today!</p>
        <a href="/post" class="signup">Create a post today!</a>
    </div>
    <div class="vector-image">
      <img src="../images/man2.png" alt="">
    </div>

</div>

<!-- views/index.ejs -->
<section class="featured-post-section" >
    <!-- <h2 class="article__heading">Featured Post</h2> -->

    <%- include('./partials/featuredpost.ejs') %>

</section>
  
<section class="articles">

<h2 class="article__heading">Latest Posts</h2>


<ul class="article-ul">

    <% data.forEach(post => { %>
     
    <li class="post-list">
        <div class="post-thumbnail">
            <img src="<%=post.imageURL  %>" alt="" srcset="">
        </div>
        <div class="blog-title-description">
            <div class="post-date"><%= post.createdAt.toDateString() %></div>
            <a href="/blogpost/<%= post._id  %>"><div class="post-title"><h2><%= post.title %></h2></div></a>
            <div class="post-description">
                <p><%= post.body %></p>
            </div>
            <a href="/blogpost/<%= post._id  %>" class="read-more-button"><div class="tex">Read More</div><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 icons-size">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
              </svg>
            
            </a>
        </div>
    </li>
    <% }) %>
</ul>
<% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a>
<% } %>


</section>

</div>